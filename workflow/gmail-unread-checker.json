{
  "version": "1.0",
  "name": "Gmail Unread Email Checker",
  "description": "Fetch and display unread emails from Gmail inbox",
  "trigger": {
    "type": "manual"
  },
  "config": {
    "steps": [
      {
        "id": "fetchUnread",
        "module": "communication.gmail.fetchEmails",
        "inputs": {
          "userId": "me",
          "filters": {
            "label": "inbox",
            "isUnread": true
          },
          "limit": 5,
          "includeBody": true
        },
        "outputAs": "emails"
      }
    ],
    "returnValue": "{{emails}}",
    "outputDisplay": {
      "type": "table",
      "columns": [
        {
          "key": "from",
          "label": "From",
          "type": "text"
        },
        {
          "key": "subject",
          "label": "Subject",
          "type": "text"
        },
        {
          "key": "snippet",
          "label": "Preview",
          "type": "text"
        },
        {
          "key": "date",
          "label": "Date",
          "type": "date"
        }
      ]
    }
  },
  "metadata": {
    "requiresCredentials": ["google"]
  }
}
